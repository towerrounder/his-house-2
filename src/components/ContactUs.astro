---
const {
  heading = "Contact Us",
  paragraph = "Contacting His House Care Centre is the first step toward a meaningful connection. Whether you have questions or want to share your thoughts, our team is here to listen and respond. By filling out the form below, you're engaging with a caring community dedicated to making a difference. We appreciate your interest and look forward to hearing from you.",
} = Astro.props;
---

<style>
  body {
    font-family: "Satoshi";
  }

  /* Container */
  .contact-container {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    /* width: 80%; */
    margin: 0 auto;
    padding: 40px 0;
    max-width: 1200px;
    align-items: center;
  }

  /* Content Section */
  .content-section {
    flex: 1;
  }

  .content-heading {
    font-size: 45px;
    margin-bottom: 10px;
    font-family: "Satoshi";
  }

  .content-paragraph {
    font-size: 20px;
    color: #555;
  }

  /* Form Section */
  .form-section {
    width: 450px;
    border: 0.5px solid;
    align-self: flex-start;
    margin-left: auto;
    background-color: white;
    padding: 20px;
    border-radius: 8px;
  }

  .form-section h2 {
    font-family: "Satoshi regular";
    margin-bottom: 20px;
    font-size: 26px;
    text-align: center;
    font-weight: 600;
  }

  /* Form Styles */
  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    font-family: "Satoshi regular";
    display: block;
    font-weight: 800;
    margin-bottom: 5px;
  }

  .form-group input,
  .form-group textarea {
    font-weight: 500;
    font-family: "Satoshi regular";
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
  }

  .form-group textarea {
    resize: vertical;
  }

  .submit-button {
    padding: 10px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #2f3396;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .submit-button:hover {
    background-color: #1c1f58;
  }
  .main-form-section {
    flex: 1;
  }
  .banner-top {
    background-color: #f7f8fc;
  }
  @media (max-width: 48em) {
    .contact-container {
      flex-direction: column;
    }
    .main-form-section {
      width: 100%;
    }
    .form-section {
      margin-left: 0 !important;
      width: 100% !important;
    }
  }
</style>

<div class="contact-container">
  <!-- Content Section -->
  <div class="content-section">
    <h1 class="content-heading">{heading}</h1>
    <p class="content-paragraph">{paragraph}</p>
  </div>

  <!-- Form Section -->
  <div class="main-form-section">
    <div class="form-section">
      <h2>Send us a message</h2>
      <form id="contact-form">
        <!-- Name & Surname -->
        <div class="form-group">
          <label for="name">Name & Surname</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Your full name"
            
          />
          <span class="error-message"></span>
        </div>

        <!-- Phone Number -->
        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            placeholder="Your phone number"
            
          />
          <span class="error-message"></span>
        </div>

        <!-- Email Address -->
        <div class="form-group">
          <label for="email">Email Address</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Your email address"
            
          />
          <span class="error-message"></span>
        </div>

        <!-- Message -->
        <div class="form-group">
          <label for="message">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Your message"
            ></textarea>
          <span class="error-message"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="submit-button">Send</button>
      </form>
    </div>
  </div>
</div>
<script is:client>
  const form = document.getElementById("contact-form");

  form.addEventListener("submit", function (event) {
    event.preventDefault(); // Prevent form submission

    let isValid = true;

    // Validate all input fields
    document
      .querySelectorAll("#contact-form input, #contact-form textarea")
      .forEach((field) => {
        const formGroup = field.closest(".form-group");
        const errorMessage = formGroup.querySelector(".error-message");

        if (!field.value.trim()) {
          formGroup.classList.add("invalid");
          errorMessage.textContent = "This field is required";
          isValid = false;
        } else {
          formGroup.classList.remove("invalid");
          errorMessage.textContent = "";
        }
      });

    // If all fields are valid, submit the form
    if (isValid) {
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      // Use a library like @astrojs/netlify-forms for form submission
      // or implement your own submission logic
      console.log(data);
    }
  });
</script>

<style>
  .form-group {
    position: relative;
    margin-bottom: 20px;
  }

  .form-group input:invalid,
  .form-group textarea:invalid {
    /* border: 2px solid red; */
  }
  
  .error-message::before{
    content: url('/public/assets/exclamation-circle.svg');
    margin-right: 5px;
  }
  .error-message {
    position: absolute;
    bottom: -20px;
    right: 0;
    color: #FF000D;
    font-size: 12px;
    visibility: hidden;
    font-family: 'Satoshi regular';
    font-weight: 600;
  }

  .form-group.invalid .error-message {
    visibility: visible;
  }

  .form-group.invalid input,
  .form-group.invalid textarea {
    border: 2px solid #FF000D;
  }
</style>
