---
const {
  bankDetails,
  logoImageUrl,
  logoAltText,
} = Astro.props;
---

<div class="full-container">
  <div class="inner-container">
    <div>
      <h1 class="main-heading">
        Thank you for considering His House Care Centre
      </h1>
      <div class="two-sections">
        <!-- First Section -->
        <div class="section-left">
          <h3>Banking Details for Donations</h3>
          <br />
          <p>
            <strong>Please note:</strong> Should you wish to deposit money for a
            specific person (resident) or cause, please indicate it on the EFT or
            bank payment so that the funds can be allocated correctly. All donations
            are greatly appreciated.
          </p>
          <br />
          <p>
            If you need assistance or have any questions please contact us by <a
              href="/contact-us">clicking here</a
            >.
          </p>
        </div>

        <!-- Second Section -->
        <div class="section-right">
          <div class="logo-text-container">
            <div class="logo-circle">
              <img src={logoImageUrl} alt={logoAltText} />
            </div>
            <p>{logoAltText}</p>
          </div>
          <!-- <div class="logo-circle">{logoText}</div> -->
          <div class="bank-details">
            <p>
              <strong>Bank Name:</strong>
              <br />
              {bankDetails.accountName}
            </p>
            <p>
              <strong>Branch:</strong>
              <br />
              {bankDetails.bankName}
            </p>
            <p>
              <strong>Branch Code:</strong>
              <br />
              {bankDetails.ifscCode}
            </p>
            <p>
              <strong>Account Number:</strong>
              <br />
              {bankDetails.accountNumber}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Full-width container */
  .full-container {
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
  }

  /* Inner container */
  .inner-container {
    display: flex;
    /* height: 40vh; */
    width: auto;

    padding: 20px;
    border-radius: 8px;

    text-align: center;
    align-items: center;
  }

  /* Centered heading */
  .main-heading {
    font-size: 48px;
    margin-bottom: 80px;
    font-weight: bold;
    font-family: "Satoshi regular";
  }

  /* Two-section container */
  .two-sections {
    display: flex;
    justify-content: space-between;
    gap: 20px;
  }

  /* First section with heading and paragraph */
  .section-left {
    flex: 1;
    text-align: left;
  }
  .section-left p {
    font-family: "Satoshi regular";

    font-size: 22px;
  }
  .section-left h3 {
    font-family: "Satoshi regular";
    font-size: 42px;
  }
  /* Second section with logo and bank details */
  .section-right {
    flex: 1;
    text-align: left;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Logo container with text beside it */
  .logo-text-container {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
  }

  /* Logo styling */
  .logo-circle {
    overflow: hidden;
    margin-right: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  /* Bank details */
  .bank-details {
    text-align: left;
  }

  .bank-details p {
    margin: 5px 0;
  }
  @media (max-width: 48em) {
    .main-heading {
      font-size: 32px;
      text-align: left;
      line-height: 40px;
      margin-bottom: 40px;
    }
    .two-sections {
      flex-direction: column;
    }

    .inner-container {
      padding: 30px 0 !important;
    }

    .section-left h3 {
      font-size: 24px !important;
    }

    .section-right {
      align-items: flex-start !important;
    }
  }
</style>
