---
import "slick-carousel/slick/slick.css";
import "slick-carousel/slick/slick-theme.css";

const images = [
  "/public/assets/sliderimages/3cd72364f18fa9b0ac1c25c967e1d3e9.jpeg",
  "/public/assets/sliderimages/562bc84c2c1ae33b794180f3a2d8718e.jpeg",
  "/public/assets/sliderimages/PortraitCard.png",
  "/public/assets/sliderimages/3cd72364f18fa9b0ac1c25c967e1d3e9.jpeg",
  "/public/assets/sliderimages/PortraitCard.png",
];
---

<!-- Load jQuery and Slick Carousel via CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js" defer></script>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"
  defer></script>

<div client:load class="slider">
  {
    images.map((image) => (
      <div>
        <img src={image} alt="Slider Image" />
      </div>
    ))
  }
</div>

<!-- Initialize the Slick slider after DOMContentLoaded -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    $(".slider").slick({
      dots: true,
      infinite: true,
      speed: 300,
      slidesToShow: 3,
      slidesToScroll: 1,
      responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 3,
            infinite: true,
            dots: true,
          },
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2,
          },
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1,
          },
        },
        // You can unslick at a given breakpoint now by adding:
        // settings: "unslick"
        // instead of a settings object
      ],
    });
  });
</script>

<style>
  .slider {
    margin-bottom: 150px;
  }
  .slick-prev:hover,
  .slick-next:hover {
    opacity: 1;
  }

  .slick-prev {
    left: -50px; /* Adjust as needed */
  }

  .slick-next {
    right: -50px; /* Adjust as needed */
  }
  .slick-prev:before {
    font-size: 20px;

    color: black !important;
  }
  .slick-next:before {
    font-size: 20px;

    color: black !important;
  }
  .slick-arrow::before {
    color: black !important;
  }
  .slick-arrow::after {
    color: black !important;
  }
  .slick-slide img {
    height: 350px;
    max-width: auto;
    display: block;
  }

  .slick-prev:before,
  .slick-next:before {
    color: black !important;
    background-color: black;
  }

  .slick-slide {
    width: 310px !important;
  }
  .slick-dots li.slick-active button:before {
    font-size: 15px;
    color: blue;
  }
  .slick-dots li button:before {
    font-size: 15px;
    color: blue;
  }
  .slick-dots {
    margin-top: 25px;
    position: absolute;
    /* bottom: -25px; */
    display: block;
    width: 100%;
    padding: 0;
    /* margin: 0; */
    list-style: none;
    text-align: center;
  }
</style>
