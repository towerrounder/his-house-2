---
import BaseLayout from "../layouts/BaseLayout.astro";

import ContactCTA from "../components/ContactCTA.astro";
import Hero from "../components/Hero.astro";
import InnerPageBanner from "../components/InnerPageBanner.astro";
import FooterSectionDonate from "../components/FooterSectionDonate.astro";
import DonateInnerSection from "../components/DonateInnerSection.astro";
const bankDetails = {
  accountName: "First National Bank, Namibia",

  bankName: "Walvis Bay",
  ifscCode: "782172",
  accountNumber: "62080745501",
};
---

<BaseLayout title="Donate" description="About Jeanine White Lorem Ipsum">
  <div class="stack">
    <main class="">
      <div class="banner-top">
        <div class="wrapper">
          <InnerPageBanner
            title="Donate"
            pageName="donate"
            image="/public/assets/donate.png"
          />
        </div>
      </div>
    </main>
    <main>
      <div class="wrapper">
        <DonateInnerSection
          logoImageUrl="/public/assets/banklogo.svg"
          bankDetails={bankDetails}
        />
      </div>
    </main>
    <section>
      <FooterSectionDonate />
    </section>
  </div>
</BaseLayout>

<style>
  .banner-top {
    padding: 100px 0;
    background-color: var(--gray-900);
  }
  @media (max-width:48em){
    .banner-top {
        padding: 30px 0 !important;
    }
  }
</style>
